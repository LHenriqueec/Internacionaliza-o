<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<BorderPane fx:controller="controller.ApplicationController"
	xmlns:fx="http://javafx.com/fxml/1">


	<center>
		<GridPane alignment="CENTER" vgap="7" hgap="7">
			<padding>
				<Insets top="12" right="12" bottom="12" left="12" />
			</padding>
			<HBox spacing="7" GridPane.columnIndex="0" GridPane.rowIndex="0">
				<children>
					<Button fx:id="btnDom" text="%btnDom" prefWidth="100" />
					<Button fx:id="btnSeg" text="%btnSeg" prefWidth="100" />
					<Button fx:id="btnTer" text="%btnTer" prefWidth="100" />
					<Button fx:id="btnQua" text="%btnQua" prefWidth="100" />
					<Button fx:id="btnQui" text="%btnQui" prefWidth="100" />
					<Button fx:id="btnSex" text="%btnSex" prefWidth="100" />
					<Button fx:id="btnSab" text="%btnSab" prefWidth="100" />
				</children>
			</HBox>

			<Button fx:id="btnChange" text="%btnChange" onAction="#changeLanguage" prefWidth="240"
				GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.halignment="CENTER" />
		</GridPane>
	</center>

</BorderPane>

